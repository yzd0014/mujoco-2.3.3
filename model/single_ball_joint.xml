<mujoco>
    <option timestep="0.01" integrator="RK4">
		<flag gravity="disable" energy="enable"/>
	</option>
    <compiler autolimits="true"/>
    <worldbody>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <geom type="plane" pos="0 0 -4" size="3 3 0.1" rgba=".9 0 0 1"/>
        <body name="root" pos="1 1 -1" euler="0 0 0">
            <joint name="joint0" type="ball" pos="0 0 2" range="0 90" solreflimit="0 -190"/>
            <!-- <joint name="joint0" type="ball" pos="0 0 2"/> -->
            <geom name="box0" type="box" size="1 1 2" rgba="0 .9 0 1" mass="1"/>
        </body>
    </worldbody>
    <sensor>
        <subtreeangmom  body="root"/>
        <subtreecom   body="root"/>
        <subtreelinvel   body="root"/>
    </sensor>
</mujoco>